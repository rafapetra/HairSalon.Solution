@{
  Layout = "_Layout";
}

@model ClaireSalon.Models.Client

<h1>Add a new client</h1>

<p><strong>NOTE:</strong> You need to have at least one stylist before you can add a client.</p>
<p>Go to @Html.ActionLink("this page", "Create", "Stylists") to add a stylist.</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList(
"StylistId",
(IEnumerable<SelectListItem>)ViewBag.Stylist,
new { @class="dropdown" }
)
  <br>
  <input type="submit" value="Add new client" class="button" />
}

<div class="index-content">
  <div class="row-3">
    @Html.ActionLink("Show all clients", "Index")
  </div>
  <div class="row-3">
    @Html.ActionLink("Home", "Index", "Home")
  </div>
</div>