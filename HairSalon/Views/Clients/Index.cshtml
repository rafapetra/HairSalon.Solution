@{
  Layout = "_Layout";
}

@using ClaireSalon.Models;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <p>No clients have been added yet</p>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
}
</ul>
<div class="index-content">
  <div class="row-3">
    @Html.ActionLink("Add new client", "Create")
  </div>
  <div class="row-3">
    @Html.ActionLink("Home", "Index", "Home")
  </div>
</div>