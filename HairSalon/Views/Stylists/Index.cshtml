@{
  Layout = "_Layout";
}
  @using ClaireSalon.Models;

  <h1>Stylists</h1>

  @if (@Model.Count == 0)
  {
    <div>No stylists have been added yet.</div>
  }

  <ul>
    @foreach (Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
    }
  </ul>

<div class="index-content">
  <div class="row-3">
@Html.ActionLink("Add a stylist", "Create")
  </div>
  <div class="row-3">
  @Html.ActionLink("Home", "Index", "Home")
  </div>
</div>